{
  "name": "backend",
  "version": "1.0.0",
  "description": "E-commerce backend with Node.js, Express, and MongoDB",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "seed": "node server/seed.js",
    "create-admin": "node server/createSuperAdmin.js",
    "docker:build": "docker build -t ecommerce-backend .",
    "docker:run": "docker run -d --name ecommerce-api -p 5000:5000 --env-file .env ecommerce-backend",
    "docker:stop": "docker stop ecommerce-api && docker rm ecommerce-api",
    "docker:logs": "docker logs -f ecommerce-api",
    "docker:shell": "docker exec -it ecommerce-api sh",
    "compose:up": "docker-compose up -d",
    "compose:down": "docker-compose down",
    "compose:logs": "docker-compose logs -f",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecommerce",
    "api",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "sharp": "^0.34.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
